<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/adminUsername_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="@color/foreColor"
        android:layout_gravity="end"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/header_font_size"
        android:textAlignment="center"
        android:textColor="@color/foreColor"
        android:text="@string/admin_activity_header_text"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreColor"
            android:text="@string/student_username_text"/>
        <EditText
            android:id="@+id/searchUsername_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/foreColor"/>
    </LinearLayout>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/foreColor"
        android:layout_margin="5dp"
        android:text="@string/student_registrationInfo_text"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreColor"
            android:text="@string/firstName_text"/>
        <Space
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreColor"
            android:text="@string/programCode_text"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Space
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/program_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/foreColor"
        android:layout_margin="5dp"
        android:text="@string/paymentInfo_text"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreColor"
            android:text="@string/totalAmount_text"/>
        <Space
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreColor"
            android:text="@string/amountPaid_text"
            />
        <Space
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreColor"
            android:text="@string/balance_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/totalAmount_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Space
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/amtPaid_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Space
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/balance_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/status_text"
            android:textColor="@color/foreColor"
            />
        <Spinner
            android:id="@+id/status_spinner"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            />
    </LinearLayout>
</LinearLayout>