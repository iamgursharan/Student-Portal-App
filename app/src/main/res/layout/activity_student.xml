<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursharan23.comp304_002_assignment4.StudentActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/studentInfo_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/student_activity_header_text"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:textColor="@color/foreColor"
        android:textSize="@dimen/header_font_size"
        android:padding="20dp"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_text"
            android:textColor="@color/foreColor"
            />
        <Space
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programName_text"
            android:textColor="@color/foreColor"
            />
        <Space
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/foreColor"
            android:text="@string/programCode_text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/studentName_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <Space
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>
         <TextView
            android:id="@+id/programName_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <Space
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/programCode_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/paymentInfo_text"
            android:textSize="15dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/foreColor"
                android:text="@string/totalFees_text"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/foreColor"
                android:text="@string/duration_text"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/foreColor"
                android:text="@string/semester_text"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/totalFees_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/duration_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/semester_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
         <LinearLayout
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_margin="10dp">
               <TextView
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="@string/status_text"
                   android:textColor="@color/foreColor"
                   />
           <TextView
               android:id="@+id/registrationStatus_textview"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text=" In progress"
               />
         </LinearLayout>
</LinearLayout>
